#!/bin/bash

if [ $# -eq 0 ]; then
    ./pyrl.py 2> save_data/errors.err
else
    $@ 2> save_data/errors.err
fi

if [ -s save_data/errors.err ]; then
    if [ $# -eq 0 ]; then
        vim -q save_data/errors.err
        rm save_data/errors.err
    else
        cat save_data/errors.err
    fi
else
    rm save_data/errors.err
fi
